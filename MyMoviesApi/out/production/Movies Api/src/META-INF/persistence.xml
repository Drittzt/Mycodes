  <persistence-unit name="Ergasia3PU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>MODEL.FavoriteList</class>
    <class>MODEL.Movie</class>
    <class>MODEL.Genre</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:derby://localhost:1527/MyMoviesDB"/>
      <property name="javax.persistence.jdbc.user" value="Ergasia3"/>
